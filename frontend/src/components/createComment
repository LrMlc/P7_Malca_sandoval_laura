<template>
  <div class="createComment">
    <div class="newPost">
      <textarea v-model="content" name="newcomment" class="content"
        placeholder="Voulez-vous commenter ce post ?"></textarea>
      <br />
    </div>
    <div class="fileComment">
      <label for="image">
        <input class="imageComment" type="file" name="image" ref="image" /> <br />
      </label>
    </div>
    <button @click="createComment()" class="submit">Publier</button>
  </div>
</template>
<script>
  import axios from "axios";
  export default {
    name: "CreateComment",
    data() {
      return {
        content: "",
      };
    },
    methods: {
      createComment: function () {
        axios
          .post("http://localhost:3000/api/post/", {
            content: this.content,
          })
          .then((response) => {
            console.log(response.data);
          })
          .catch(error => {
            console.log(error);
          });
      },
    },
  };
</script>